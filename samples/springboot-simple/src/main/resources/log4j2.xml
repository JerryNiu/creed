<?xml version="1.0" encoding="UTF-8"?>
<!-- Don't forget to set system property
-DLog4jContextSelector=org.apache.logging.log4j.core.async.AsyncLoggerContextSelector
     to make all loggers asynchronous. -->
<Configuration status="WARN" monitorInterval="60">
    <Properties>
        <!-- 日志目录 -->
        <Property name="LOG_DIR" value="../logs/"/>
        <!-- 日志文件前缀 -->
        <Property name="APP_NAME" value="simpleapp"/>
        <!-- 日志格式 -->
        <Property name="FILE_LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} %5p [%-15.15t] %-40.40logger{1.} : %L#\t%m%n"/>
        <!-- 彩色日志格式(控制台) -->
        <Property name="CONSOLE_LOG_PATTERN" value="%clr{%d{yyyy-MM-dd HH:mm:ss}}{magenta} %clr{${LOG_LEVEL_PATTERN:-%5p}} %clr{[%-15.15t]}{faint} %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %clr{%L#\t}{green}%m%n${LOG_EXCEPTION_CONVERSION_WORD:-%xwEx}"/>
    </Properties>
    <Appenders>
        <!-- 控制台日志 -->
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="${CONSOLE_LOG_PATTERN}" />
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>
        <!-- DEBUG日志文件 -->
        <RollingRandomAccessFile  name="DEBUG-OUT" fileName="${LOG_DIR}${APP_NAME}_debug.log"
                          filePattern="${LOG_DIR}${APP_NAME}_debug.%d{yyyy-MM-dd}.log"
                          immediateFlush="false" append="true">
            <PatternLayout pattern="${FILE_LOG_PATTERN}" />
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <TimeBasedTriggeringPolicy />
        </RollingRandomAccessFile >
        <!-- ERROR日志文件 -->
        <RollingRandomAccessFile  name="ERROR-OUT" fileName="${LOG_DIR}${APP_NAME}_error.log"
                          filePattern="${LOG_DIR}${APP_NAME}_error.%d{yyyy-MM-dd}.log"
                          immediateFlush="false" append="true">
            <PatternLayout pattern="${FILE_LOG_PATTERN}" />
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <TimeBasedTriggeringPolicy />
        </RollingRandomAccessFile >
    </Appenders>
    <Loggers>
        <!-- 去除日志 -->
        <AsyncLogger name="org.springframework" level="INFO" />
        <AsyncLogger name="org.apache" level="INFO" />
        <AsyncLogger name="com.netflix" level="INFO" />
        <AsyncLogger name="org.hibernate" level="INFO" />
        <!--阿里MQ-->
        <AsyncLogger name="RocketmqClient" level="ERROR" />
        <AsyncLogger name="RocketmqCommon" level="WARN" />
        <AsyncLogger name="RocketmqRemoting" level="WARN" />
        <!--druid-->
        <AsyncLogger name="druid.sql.Statement" level="WARN" />
        <AsyncLogger name="druid.sql.ResultSet" level="WARN" />
        <!-- ROOT日志 -->
        <asyncRoot level="ALL" includeLocation="true">
            <appender-ref ref="STDOUT" />
            <appender-ref ref="DEBUG-OUT" />
            <appender-ref ref="ERROR-OUT" />
        </asyncRoot>
    </Loggers>
</Configuration>