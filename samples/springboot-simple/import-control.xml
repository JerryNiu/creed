<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC "-//Puppy Crawl//DTD Import Control 1.2//EN" "http://www.puppycrawl.com/dtds/import_control_1_2.dtd">
<import-control pkg="com.geercode.creed.samples">
	<!--base check-->
	<allow pkg=".*" regex="true" />
	<subpackage name="dao">
		<disallow pkg="com.geercode.creed.samples.dao"/>
		<disallow pkg="com.geercode.creed.samples.domain"/>
		<disallow pkg="com.geercode.creed.samples.service"/>
		<disallow pkg="com.geercode.creed.samples.controller"/>
	</subpackage>
	<subpackage name="domain">
		<disallow pkg="com.geercode.creed.samples.domain"/>
		<disallow pkg="com.geercode.creed.samples.service"/>
		<disallow pkg="com.geercode.creed.samples.controller"/>
	</subpackage>
	<subpackage name="service">
		<disallow pkg="com.geercode.creed.samples.service"/>
		<disallow pkg="com.geercode.creed.samples.controller"/>
	</subpackage>
	<subpackage name="controller">
		<disallow pkg="com.geercode.creed.samples.controller"/>
	</subpackage>
</import-control>
